name: check_age
states:
    niceness:
        component: meya.random_text
        properties:
            responses:
            - Hi :)
            - Hello, there!
            - Howdy!
            - Bonjour.
    ask:
        component: meya.input_string
        properties:
            text: How can I help you with British Exports?
            output: text
    check:
        component: intent_checker
        transitions:
            angry: emergency
            happy: support
    emergency:
        component: meya.text
        properties:
            text: I'm really sorry to hear that. Let's see if we can make things a
                bit better for you.
        return: true
    support:
        component: meya.text
        properties:
            text: Sounds great, I can definitely help you with that.
        return: true
